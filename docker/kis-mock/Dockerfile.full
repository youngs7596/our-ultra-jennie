FROM python:3.11-slim

WORKDIR /app

# 프로젝트 전체 복사 (shared 모듈 포함)
COPY shared/ ./shared/
COPY utilities/mock_kis_api_server.py .
COPY utilities/requirements.txt .
# 의존성 설치
RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 9443

# Mock KIS API Server 실행
CMD ["python", "mock_kis_api_server.py"]

